@page
@model Teamownik.Web.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Wylogowano";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        .container {
            text-align: center;
        }
        h1 {
            font-size: 32px;
            margin-bottom: 20px;
        }
        a {
            display: inline-block;
            padding: 15px 30px;
            background: #000;
            color: #fff;
            text-decoration: none;
            border-radius: 12px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Zostałeś wylogowany</h1>
    <a asp-page="/Account/Login">Zaloguj się ponownie</a>
</div>
</body>
</html>