@page
@model Teamownik.Web.Areas.Identity.Pages.Account.LogoutModel
@{
ViewData["Title"] = "Wylogowano";
Layout = null;
}

<!DOCTYPE html>
<html lang="pl" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body class="bg-light">

<div class="container" style="max-width: 500px; min-height: 100vh; display: flex; align-items: center; justify-content: center;">

    <div class="w-100 text-center">

        <div class="bg-white p-5 shadow-sm rounded-4">
            <div class="mb-4">
                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                    <i class="bi bi-box-arrow-right fs-1 text-info"></i>
                </div>
            </div>

            <h1 class="h3 fw-bold mb-3">Wylogowano pomyślnie</h1>
            <p class="text-muted mb-4">Dziękujemy za korzystanie z aplikacji Teamownik.<br>Do zobaczenia wkrótce!</p>

            <div class="d-grid gap-2">
                <a asp-page="./Login" class="btn btn-dark btn-lg rounded-3 fw-bold">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Zaloguj się ponownie
                </a>
            </div>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>