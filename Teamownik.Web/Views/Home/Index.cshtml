                            <a href="/Games/Details/@game.GameId" class="btn-action btn-outline-action" style="width: 100%;">
                                Szczegóły
                            </a>
                        }
                        else
                        {
                            <a href="/Games/Details/@game.GameId" class="btn-action btn-outline-action" style="flex: 1;">
                                Szczegóły
                            </a>
                            <form method="post" asp-controller="Games" asp-action="Join" asp-route-id="@game.GameId" style="flex: 2;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-action btn-primary-action" style="width: 100%;">
