}

    @if ((Model.MyOrganizedGames == null || !Model.MyOrganizedGames.Any()) && 
         (Model.MyParticipatingGames == null || !Model.MyParticipatingGames.Any()) && 
         (Model.MyGroupGames == null || !Model.MyGroupGames.Any()) && 
         (Model.PublicGames == null || !Model.PublicGames.Any()))
    {
        <div class="content-section">
            <div class="empty-state">
                <i class="bi bi-calendar-x"></i>
                <h3>Brak dostępnych spotkań</h3>
                <p>Stwórz nowe spotkanie lub dołącz do grupy!</p>
                <a href="/Games/Create" class="btn-new" style="margin-top: 20px;">Utwórz spotkanie</a>
            </div>
        </div>
    }

    <div class="bottom-nav">
        <a href="/" class="nav-item active">
