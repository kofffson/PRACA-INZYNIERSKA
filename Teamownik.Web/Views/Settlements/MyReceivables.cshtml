@model Teamownik.Web.Models.ReceivablesViewModel
@{
    ViewData["Title"] = "Moje należności";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body class="bg-light" style="padding-top: 66px; padding-bottom: 80px;">

@await Html.PartialAsync("_Navbar")

<div class="container" style="max-width: 900px;">
    <div class="bg-white p-3 shadow-sm mb-3 rounded-3 position-sticky" style="top: 66px; z-index: 1020;">
        <div class="d-flex align-items-center gap-3">
            <a href="/Settlements/MyPayments" class="text-decoration-none fs-4 text-dark">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div class="fw-bold fs-5 text-dark">Moje należności</div>
        </div>
    </div>

    <!-- Podsumowanie -->
    <div class="bg-white p-4 shadow-sm mb-3 rounded-4">
        <div class="text-center p-3 bg-success bg-opacity-10 rounded-3">
            <div class="fs-3 fw-bold text-success">@Model.TotalToReceive.ToString("0.00") zł</div>
            <small class="text-muted">Całkowita kwota do otrzymania</small>
        </div>
    </div>

    <!-- Lista należności -->
    @if (Model.Receivables.Any())
    {
        <div class="bg-white p-3 shadow-sm rounded-4">
            <h5 class="fw-bold mb-3">
                <i class="bi bi-cash-stack text-success me-2"></i>
                Należności od uczestników (@Model.Receivables.Count)
            </h5>

            @foreach (var receivable in Model.Receivables.OrderBy(r => r.IsPaid).ThenBy(r => r.DueDate))
            {
                <div class="card mb-3 shadow-sm border-0 @(receivable.IsPaid ? "bg-success bg-opacity-10" : receivable.IsOverdue ? "border-start border-danger border-3" : "")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h6 class="fw-bold mb-1">@receivable.Title</h6>
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>
                                    @receivable.Date.ToString("dd.MM.yyyy HH:mm")
                                </small>
                            </div>
                            <span class="badge @(receivable.IsPaid ? "bg-success" : receivable.IsOverdue ? "bg-danger" : "bg-warning")">
                                @if (receivable.IsPaid)
                                {
                                    <text>Zapłacone</text>
                                }
                                else if (receivable.IsOverdue)
                                {
                                    <text>Zaległość</text>
                                }
                                else
                                {
                                    <text>Oczekuje</text>
                                }
                            </span>
                        </div>

                        <div class="mb-2">
                            <small class="text-muted d-block">Od kogo:</small>
                            <strong>@receivable.RecipientName</strong>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted d-block">Kwota:</small>
                            <div class="fs-4 fw-bold @(receivable.IsPaid ? "text-success" : "text-warning")">
                                @receivable.Amount.ToString("0.00") zł
                            </div>
                        </div>

                        @if (!receivable.IsPaid)
                        {
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>
                                    Termin: @receivable.DueDate.ToString("dd.MM.yyyy")
                                    @if (receivable.IsOverdue)
                                    {
                                        <span class="text-danger fw-bold">(Przeterminowane!)</span>
                                    }
                                </small>
                            </div>

                            <form method="post" asp-action="SendReminder" asp-route-id="@receivable.SettlementId" class="mt-3">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-primary w-100 fw-semibold">
                                    <i class="bi bi-bell me-2"></i>Wyślij przypomnienie
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="text-success">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <strong>Zapłacono: @receivable.PaidAt?.ToString("dd.MM.yyyy")</strong>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-white p-5 shadow-sm rounded-4 text-center">
            <i class="bi bi-inbox fs-1 text-muted opacity-50"></i>
            <h5 class="mt-3">Brak należności</h5>
            <p class="text-muted">Nie masz obecnie żadnych należności od innych użytkowników.</p>
        </div>
    }
</div>

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999; margin-top: 70px;">
    @if (TempData["Success"] != null)
    {
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <strong>Sukces!</strong> @TempData["Success"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-x-circle-fill me-2"></i>
                    <strong>Błąd!</strong> @TempData["Error"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        var toastList = toastElList.map(function(toastEl) {
            return new bootstrap.Toast(toastEl, {
                autohide: true,
                delay: 6000
            });
        });
        toastList.forEach(function(toast) {
            toast.show();
        });
    });
</script>
</body>
</html>
