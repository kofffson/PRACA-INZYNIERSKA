@model Teamownik.Web.Models.GameSettlementsViewModel
@{
    ViewData["Title"] = "Rozliczenia gry";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body class="bg-light" style="padding-top: 66px; padding-bottom: 80px;">

@await Html.PartialAsync("_Navbar")

<div class="container" style="max-width: 900px;">
    <div class="bg-white p-3 shadow-sm mb-3 rounded-3 position-sticky" style="top: 66px; z-index: 1020;">
        <div class="d-flex align-items-center gap-3">
            <a href="/Games/Manage/@Model.GameId" class="text-decoration-none fs-4 text-dark">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div class="fw-bold fs-5 text-dark">Rozliczenia gry</div>
        </div>
    </div>

    <!-- Nagłówek gry -->
    <div class="bg-white p-4 shadow-sm mb-3 rounded-4">
        <h4 class="fw-bold mb-3">@Model.GameName</h4>
        
        <!-- Postęp zbierania wpłat -->
        <div class="mb-3">
            <div class="d-flex justify-content-between mb-2">
                <span class="small text-muted">Zebrany budżet</span>
                <span class="small fw-bold">@Model.CollectionPercentage.ToString("0.0")%</span>
            </div>
            <div class="progress" style="height: 24px;">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width: @Model.CollectionPercentage%">
                    <span class="fw-bold">@Model.TotalCollected.ToString("0.00") zł / @(Model.TotalAmount * Model.TotalParticipants).ToString("0.00") zł</span>
                </div>
            </div>
        </div>

        <!-- Statystyki -->
        <div class="row g-3 mt-3">
            <div class="col-4">
                <div class="text-center p-3 bg-light rounded-3">
                    <div class="fs-4 fw-bold text-primary">@Model.TotalParticipants</div>
                    <small class="text-muted">Uczestników</small>
                </div>
            </div>
            <div class="col-4">
                <div class="text-center p-3 bg-success bg-opacity-10 rounded-3">
                    <div class="fs-4 fw-bold text-success">@Model.PaidCount</div>
                    <small class="text-muted">Zapłaciło</small>
                </div>
            </div>
            <div class="col-4">
                <div class="text-center p-3 bg-danger bg-opacity-10 rounded-3">
                    <div class="fs-4 fw-bold text-danger">@Model.UnpaidCount</div>
                    <small class="text-muted">Nie zapłaciło</small>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-2">
            <div class="col-6">
                <div class="text-center p-2 bg-light rounded-3">
                    <small class="text-muted d-block">Zebrano</small>
                    <div class="fw-bold text-success">@Model.TotalCollected.ToString("0.00") zł</div>
                </div>
            </div>
            <div class="col-6">
                <div class="text-center p-2 bg-light rounded-3">
                    <small class="text-muted d-block">Pozostało</small>
                    <div class="fw-bold text-danger">@Model.TotalOutstanding.ToString("0.00") zł</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista uczestników i ich płatności -->
    <div class="bg-white p-3 shadow-sm rounded-4">
        <h5 class="fw-bold mb-3">
            <i class="bi bi-people-fill me-2"></i>
            Lista płatności uczestników
        </h5>

        @if (Model.Settlements.Any())
        {
            foreach (var settlement in Model.Settlements.OrderBy(s => s.IsPaid).ThenBy(s => s.PayerName))
            {
                <div class="card mb-2 shadow-sm border-0 @(settlement.IsPaid ? "bg-success bg-opacity-10" : settlement.IsOverdue ? "bg-danger bg-opacity-10" : "")">
                    <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="flex-grow-1">
                                <div class="fw-bold d-flex align-items-center gap-2">
                                    @settlement.PayerName
                                    @if (settlement.IsPaid)
                                    {
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                    }
                                    else if (settlement.IsOverdue)
                                    {
                                        <i class="bi bi-exclamation-circle-fill text-danger"></i>
                                    }
                                </div>
                                <small class="text-muted">@settlement.PayerEmail</small>
                                <div class="mt-1">
                                    <span class="badge @(settlement.IsPaid ? "bg-success" : settlement.IsOverdue ? "bg-danger" : "bg-warning")">
                                        @if (settlement.IsPaid)
                                        {
                                            <text>✓ Zapłacone @settlement.PaidAt?.ToString("dd.MM.yyyy")</text>
                                        }
                                        else if (settlement.IsOverdue)
                                        {
                                            <text>! Zaległość</text>
                                        }
                                        else
                                        {
                                            <text>Oczekuje - termin: @settlement.DueDate.ToString("dd.MM")</text>
                                        }
                                    </span>
                                </div>
                            </div>
                            
                            <div class="text-end">
                                <div class="fs-5 fw-bold">@settlement.Amount.ToString("0.00") zł</div>
                                @if (!settlement.IsPaid)
                                {
                                    <form method="post" asp-action="ConfirmPaymentByOrganizer" asp-route-settlementId="@settlement.SettlementId" asp-route-gameId="@Model.GameId" class="mt-2">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-success btn-sm fw-semibold">
                                            <i class="bi bi-check-circle me-1"></i>Potwierdź
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Podsumowanie na końcu -->
            <div class="card bg-info bg-opacity-10 mt-4 border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="fw-bold fs-5">Podsumowanie</div>
                            <small class="text-muted">
                                @Model.PaidCount zapłaciło z @Model.TotalParticipants uczestników
                            </small>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold fs-4 text-success">@Model.TotalCollected.ToString("0.00") zł</div>
                            @if (Model.TotalOutstanding > 0)
                            {
                                <small class="text-danger">
                                    Pozostało: @Model.TotalOutstanding.ToString("0.00") zł
                                </small>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center p-5 text-muted">
                <i class="bi bi-inbox fs-1 opacity-50"></i>
                <p class="mt-3">Brak rozliczeń dla tej gry</p>
                <small>Rozliczenia pojawią się automatycznie po potwierdzeniu uczestników</small>
            </div>
        }
    </div>
</div>

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999; margin-top: 70px;">
    @if (TempData["Success"] != null)
    {
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <strong>Sukces!</strong> @TempData["Success"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-x-circle-fill me-2"></i>
                    <strong>Błąd!</strong> @TempData["Error"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        var toastList = toastElList.map(function(toastEl) {
            return new bootstrap.Toast(toastEl, {
                autohide: true,
                delay: 6000
            });
        });
        toastList.forEach(function(toast) {
            toast.show();
        });
    });
</script>
</body>
</html>
