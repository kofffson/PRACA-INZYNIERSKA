@model Teamownik.Web.Models.CreateGameViewModel
@{
ViewData["Title"] = "Nowa Rozgrywka";
Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light" style="padding-top: 66px; padding-bottom: 80px;">
@await Html.PartialAsync("_Navbar")
<div class="container" style="max-width: 900px;">

    <div class="bg-white p-3 shadow-sm mb-3 rounded-3 position-sticky" style="top: 66px; z-index: 1020;">
        <div class="d-flex align-items-center gap-3">
            <a href="/" class="text-decoration-none fs-4 text-dark"><i class="bi bi-arrow-left"></i></a>
            <div class="fw-bold fs-5 text-dark">Wypełnij szczegóły</div>
        </div>
    </div>

    <div class="bg-white p-4 rounded-3 shadow-sm mb-4">
        <form method="post" asp-action="Create" asp-controller="Games">
            @Html.AntiForgeryToken()


            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase" asp-for="GameName">
                    <i class="bi bi-controller text-info me-1"></i>Nazwa rozgrywki
                </label>
                <input type="text" asp-for="GameName" class="form-control form-control-lg rounded-pill bg-light border-0" placeholder="np. Siatkówka">
                <span asp-validation-for="GameName" class="text-danger small ms-2"></span>
            </div>

            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase" asp-for="GameDate">
                    <i class="bi bi-calendar-date-fill text-info me-1"></i>Data
                </label>
                <input type="date" asp-for="GameDate" class="form-control form-control-lg rounded-pill bg-light border-0" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                <span asp-validation-for="GameDate" class="text-danger small ms-2"></span>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-6">
                    <label class="form-label small text-muted fw-bold text-uppercase" asp-for="StartTime">
                        <i class="bi bi-clock-fill text-info me-1"></i>Początek
                    </label>
                    <input type="time" asp-for="StartTime" class="form-control form-control-lg rounded-pill bg-light border-0">
                    <span asp-validation-for="StartTime" class="text-danger small ms-2"></span>
                </div>
                <div class="col-6">
                    <label class="form-label small text-muted fw-bold text-uppercase" asp-for="EndTime">
                        <i class="bi bi-clock-fill text-info me-1"></i>Koniec
                    </label>
                    <input type="time" asp-for="EndTime" class="form-control form-control-lg rounded-pill bg-light border-0">
                    <span asp-validation-for="EndTime" class="text-danger small ms-2"></span>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase" asp-for="Location">
                    <i class="bi bi-geo-alt-fill text-info me-1"></i>Miejsce
                </label>
    
                <input type="text" asp-for="Location" class="form-control form-control-lg bg-light border-0 rounded-pill" placeholder="np. Orlik">
    
                <span asp-validation-for="Location" class="text-danger small ms-2"></span>
            </div>

            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase" asp-for="Cost">
                    <i class="bi bi-credit-card-fill text-info me-1"></i>Koszt / zrzutka
                </label>
                <div class="d-flex gap-3 align-items-center">
                    <div class="flex-grow-1">
                        <div class="input-group">
                            <input type="number" asp-for="Cost" class="form-control form-control-lg bg-light border-0 rounded-pill" placeholder="Podaj kwotę" step="1" min="0">
                            <span class="input-group-text bg-light border-0 rounded-end-3 fw-bold text-muted">PLN</span>
                        </div>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsPaid" id="isPaidToggle">
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase" asp-for="MaxParticipants">
                    <i class="bi bi-people-fill text-info me-1"></i>Limit miejsc
                </label>
                <div class="d-flex justify-content-center align-items-center gap-3 p-2 bg-light rounded-pill border-0">
                    <button type="button" class="btn btn-white text-dark border rounded-circle" id="decrementBtn"><i class="bi bi-dash fs-4"></i></button>
                    <span class="fs-4 fw-bold text-dark mx-3" id="counterDisplay">2</span>
                    <button type="button" class="btn btn-white text-dark border rounded-circle" id="incrementBtn"><i class="bi bi-plus fs-4"></i></button>
                </div>
                <input type="hidden" asp-for="MaxParticipants" id="maxParticipantsInput" value="2">
            </div>

            <hr class="my-4 text-secondary opacity-25">

            <div class="d-flex justify-content-between align-items-center py-2">
                <div>
                    <label class="fw-bold mb-0">
                        <i class="bi bi-people-fill text-info me-1"></i>Tylko dla grupy
                    </label>
                    <small class="text-muted d-block">Widoczne tylko dla członków</small>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="OnlyForGroup" id="onlyForGroupToggle">
                </div>
            </div>

            <div class="d-none mt-3 bg-light p-3 rounded-4" id="groupSelectWrapper">
                <label class="form-label small fw-bold" asp-for="GroupId">Wybierz grupę</label>
                <select asp-for="GroupId" class="form-select form-select-lg border-0 rounded-3 shadow-sm">
                    <option value="">-- Wybierz z listy --</option>
                    @if(ViewBag.UserGroups != null)
                    {
                    @foreach(var group in (IEnumerable<Teamownik.Data.Models.Group>)ViewBag.UserGroups)
                    {
                    <option value="@group.GroupId">@group.GroupName</option>
                    }
                    }
                </select>
            </div>

            <div class="d-flex justify-content-between align-items-center py-2 mt-3">
                <div>
                    <label class="fw-bold mb-0">
                        <i class="bi bi-globe text-info me-1"></i>Publiczne
                    </label>
                    <small class="text-muted d-block">Widoczne dla wszystkich w okolicy</small>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsPublic" id="isPublicToggle" checked>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center py-2 mt-3">
                <div>
                    <label class="fw-bold mb-0">
                        <i class="bi bi-arrow-repeat text-info me-1"></i>Spotkanie cykliczne
                    </label>
                    <small class="text-muted d-block">Powtarzające się automatycznie</small>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsRecurring" id="isRecurringToggle">
                </div>
            </div>

            <div class="d-none mt-3 bg-light p-3 rounded-4" id="recurringOptionsWrapper">
                <div class="mb-3">
                    <label class="form-label small fw-bold" asp-for="RecurrencePattern">Częstotliwość</label>
                    <select asp-for="RecurrencePattern" class="form-select form-select-lg border-0 rounded-3 shadow-sm">
                        <option value="">-- Wybierz częstotliwość --</option>
                        <option value="daily">Codziennie</option>
                        <option value="weekly">Co tydzień</option>
                        <option value="biweekly">Co dwa tygodnie</option>
                        <option value="monthly">Co miesiąc</option>
                    </select>
                </div>
            </div>

            <div class="d-grid mt-5">
                <button type="submit" class="btn btn-dark btn-lg rounded-pill fw-bold shadow-sm">
                    <i class="bi bi-check-circle-fill me-2"></i> Utwórz rozgrywkę
                </button>
            </div>

        </form>
    </div>
</div>

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999; margin-top: 70px;">
    @if (TempData["Success"] != null)
    {
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle-fill me-2"></i>
                <strong>Sukces!</strong> @TempData["Success"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    }

    @if (TempData["Error"] != null)
    {
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-x-circle-fill me-2"></i>
                <strong>Błąd!</strong> @TempData["Error"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    }

    @if (TempData["Warning"] != null)
    {
    <div id="warningToast" class="toast align-items-center text-dark bg-warning border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Uwaga!</strong> @TempData["Warning"]
            </div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
    <div id="validationToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-exclamation-octagon-fill me-2"></i>
                <strong>Błąd!</strong>
                <ul class="mb-0 mt-2 ps-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                    <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const decrementBtn = document.getElementById('decrementBtn');
    const incrementBtn = document.getElementById('incrementBtn');
    const counterDisplay = document.getElementById('counterDisplay');
    const maxParticipantsInput = document.getElementById('maxParticipantsInput');
    let count = 2;

    decrementBtn.addEventListener('click', () => {
        if(count > 2) {
            count--;
            updateCounter();
        }
    });

    incrementBtn.addEventListener('click', () => {
        if(count < 100) {
            count++;
            updateCounter();
        }
    });

    function updateCounter() {
        counterDisplay.textContent = count;
        maxParticipantsInput.value = count;
    }

    const isPaidToggle = document.getElementById('isPaidToggle');
    const costInput = document.querySelector('input[name="Cost"]');

    isPaidToggle.addEventListener('change', function(){
        costInput.disabled = !this.checked;
        if(!this.checked) costInput.value = '0';
    });

    if(!isPaidToggle.checked) costInput.disabled = true;

    const onlyForGroupToggle = document.getElementById('onlyForGroupToggle');
    const groupSelectWrapper = document.getElementById('groupSelectWrapper');
    const isPublicToggle = document.getElementById('isPublicToggle');

    onlyForGroupToggle.addEventListener('change', function(){
        if(this.checked) {
            groupSelectWrapper.classList.remove('d-none');
            isPublicToggle.checked = false;
        } else {
            groupSelectWrapper.classList.add('d-none');
        }
    });

    isPublicToggle.addEventListener('change', function(){
        if(this.checked) {
            onlyForGroupToggle.checked = false;
            groupSelectWrapper.classList.add('d-none');
        }
    });
    const isRecurringToggle = document.getElementById('isRecurringToggle');
    const recurringOptionsWrapper = document.getElementById('recurringOptionsWrapper');

    isRecurringToggle.addEventListener('change', function(){
        if(this.checked) {
            recurringOptionsWrapper.classList.remove('d-none');
        } else {
            recurringOptionsWrapper.classList.add('d-none');
        }
    });

    updateCounter();

    document.addEventListener('DOMContentLoaded', function() {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        var toastList = toastElList.map(function(toastEl) {
            return new bootstrap.Toast(toastEl, {
                autohide: true,
                delay: 6000
            });
        });
        toastList.forEach(function(toast) {
            toast.show();
        });
    });
</script>

</body>
</html>
