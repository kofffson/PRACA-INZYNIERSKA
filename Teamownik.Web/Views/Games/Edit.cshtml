@model Teamownik.Web.Models.EditGameViewModel
@{
ViewData["Title"] = "Edytuj spotkanie";
Layout = null;
}

<!DOCTYPE html>
<html lang="pl" data-bs-theme="light">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Edytuj spotkanie - Teamownik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body class="bg-light" style="padding-top: 66px; padding-bottom: 80px;">

@await Html.PartialAsync("_Navbar")

<div class="container" style="max-width: 900px;">
    <div class="bg-white p-3 shadow-sm mb-3 rounded-3 position-sticky" style="top: 66px; z-index: 1020;">
        <div class="d-flex align-items-center gap-3">
            <a href="/" class="text-decoration-none fs-4 text-dark"><i class="bi bi-arrow-left"></i></a>
            <div class="fw-bold fs-5 text-dark">Edytuj spoktanie</div>
        </div>
    </div>
</div>

<div class="container" style="max-width: 900px;">

    @* <div class="bg-white p-4 shadow-sm mb-4 rounded-4"> *@
    @*     <div class="d-flex align-items-center gap-3"> *@
    @*         <a href="/Games/Manage/@Model.GameId" class="text-dark fs-4"> *@
    @*             <i class="bi bi-arrow-left"></i> *@
    @*         </a> *@
    @*         <div> *@
    @*             <h4 class="fw-bold mb-0">Edytuj spotkanie</h4> *@
    @*             <p class="text-muted small mb-0">Wprowadź zmiany</p> *@
    @*         </div> *@
    @*     </div> *@
    @* </div> *@

    <div class="bg-white p-3 shadow-sm mb-4 rounded-4">
        <form asp-action="Edit" asp-controller="Games" asp-route-id="@Model.GameId" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GameId" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-3" role="alert"></div>

            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase" asp-for="GameName">
                    <i class="bi bi-controller text-info me-1"></i>Nazwa rozgrywki
                </label>
                <input type="text" asp-for="GameName" class="form-control form-control-lg rounded-3 bg-light border-0" placeholder="np. Siatkówka">
                <span asp-validation-for="GameName" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase" asp-for="GameDate">
                    <i class="bi bi-calendar-fill text-info me-1"></i>Data
                </label>
                <input type="date" asp-for="GameDate" class="form-control form-control-lg rounded-3 bg-light border-0">
                <span asp-validation-for="GameDate" class="text-danger small"></span>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-6">
                    <label class="form-label small text-muted fw-bold text-uppercase" asp-for="StartTime">
                        <i class="bi bi-clock-fill text-info me-1"></i>Początek
                    </label>
                    <input type="time" asp-for="StartTime" class="form-control form-control-lg rounded-3 bg-light border-0">
                    <span asp-validation-for="StartTime" class="text-danger small"></span>
                </div>
                <div class="col-6">
                    <label class="form-label small text-muted fw-bold text-uppercase" asp-for="EndTime">
                        <i class="bi bi-clock-history text-info me-1"></i>Koniec
                    </label>
                    <input type="time" asp-for="EndTime" class="form-control form-control-lg rounded-3 bg-light border-0">
                    <span asp-validation-for="EndTime" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase" asp-for="Location">
                    <i class="bi bi-geo-alt-fill text-info me-1"></i>Miejsce
                </label>
                <input type="text" asp-for="Location" class="form-control form-control-lg rounded-3 bg-light border-0" placeholder="np. Orlik">
                <span asp-validation-for="Location" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase">
                    <i class="bi bi-credit-card-fill text-info me-1"></i>Koszt / zrzutka
                </label>
                <div class="d-flex gap-3 align-items-center">
                    <div class="flex-grow-1">
                        <div class="input-group">
                            <input type="number" asp-for="Cost" class="form-control form-control-lg bg-light border-0 rounded-start-3" placeholder="0" step="0.01" min="0" id="costInput">
                            <span class="input-group-text bg-light border-0 rounded-end-3 fw-bold text-muted">PLN</span>
                        </div>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsPaid" id="isPaidToggle">
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label small text-muted fw-bold text-uppercase" asp-for="MaxParticipants">
                    <i class="bi bi-people-fill text-info me-1"></i>Limit miejsc
                </label>
                <input type="number" asp-for="MaxParticipants" min="2" max="100" class="form-control form-control-lg rounded-3 bg-light border-0">
                <span asp-validation-for="MaxParticipants" class="text-danger small"></span>
            </div>

            <hr class="my-4 text-secondary opacity-25">

            <div class="d-flex justify-content-between align-items-center py-2">
                <div>
                    <label class="fw-bold mb-0">Tylko dla grupy</label>
                    <small class="text-muted d-block">Widoczne tylko dla członków</small>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="OnlyForGroup" id="onlyForGroupToggle">
                </div>
            </div>

            <div class="@(Model.OnlyForGroup ? "" : "d-none") mt-3 bg-light p-3 rounded-4" id="groupSelectWrapper">
                <label class="form-label small fw-bold" asp-for="GroupId">Wybierz grupę</label>
                <select asp-for="GroupId" class="form-select form-select-lg border-0 rounded-3 shadow-sm">
                    <option value="">-- Wybierz z listy --</option>
                    @if(ViewBag.UserGroups != null)
                    {
                    @foreach(var group in (IEnumerable<Teamownik.Data.Models.Group>)ViewBag.UserGroups)
                    {
                    <option value="@group.GroupId">@group.GroupName</option>
                    }
                    }
                </select>
            </div>

            <div class="d-flex justify-content-between align-items-center py-2 mt-3">
                <div>
                    <label class="fw-bold mb-0">Publiczne</label>
                    <small class="text-muted d-block">Widoczne dla wszystkich w okolicy</small>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsPublic" id="isPublicToggle">
                </div>
            </div>

            <div class="d-flex flex-column gap-2 mt-4">
                <button type="submit" class="btn btn-success btn-lg rounded-3 fw-semibold">
                    <i class="bi bi-check-circle-fill me-2"></i>Zapisz zmiany
                </button>
                <a href="/Games/Manage/@Model.GameId" class="btn btn-outline-secondary btn-lg rounded-3 fw-semibold">
                    <i class="bi bi-x-circle me-2"></i>Anuluj
                </a>
            </div>

        </form>
    </div>

</div>

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999; margin-top: 70px;">
    @if (TempData["Success"] != null)
    {
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle-fill me-2"></i>
                <strong>Sukces!</strong> @TempData["Success"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    }

    @if (TempData["Error"] != null)
    {
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-x-circle-fill me-2"></i>
                <strong>Błąd!</strong> @TempData["Error"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    }

    @if (TempData["Warning"] != null)
    {
    <div id="warningToast" class="toast align-items-center text-dark bg-warning border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Uwaga!</strong> @TempData["Warning"]
            </div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const isPaidToggle = document.getElementById('isPaidToggle');
    const costInput = document.getElementById('costInput');

    isPaidToggle.addEventListener('change', function(){
        costInput.disabled = !this.checked;
        if(!this.checked) costInput.value = '0';
    });

    if(!isPaidToggle.checked) costInput.disabled = true;

    const onlyForGroupToggle = document.getElementById('onlyForGroupToggle');
    const groupSelectWrapper = document.getElementById('groupSelectWrapper');
    const isPublicToggle = document.getElementById('isPublicToggle');

    onlyForGroupToggle.addEventListener('change', function(){
        if(this.checked){
            groupSelectWrapper.classList.remove('d-none');
            isPublicToggle.checked = false;
        } else {
            groupSelectWrapper.classList.add('d-none');
        }
    });

    isPublicToggle.addEventListener('change', function(){
        if(this.checked){
            onlyForGroupToggle.checked = false;
            groupSelectWrapper.classList.add('d-none');
        }
    });

    document.addEventListener('DOMContentLoaded', function() {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        var toastList = toastElList.map(function(toastEl) {
            return new bootstrap.Toast(toastEl, {
                autohide: true,
                delay: 6000
            });
        });
        toastList.forEach(function(toast) {
            toast.show();
        });
    });
</script>

</body>
</html>
