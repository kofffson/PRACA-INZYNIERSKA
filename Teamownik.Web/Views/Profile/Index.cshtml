@model Teamownik.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = "Mój profil";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body class="bg-light" style="padding-top: 66px; padding-bottom: 80px;">

@await Html.PartialAsync("_Navbar")

<div class="container" style="max-width: 900px;">
    <div class="bg-white p-3 shadow-sm mb-3 rounded-3 position-sticky" style="top: 66px; z-index: 1020;">
        <div class="d-flex align-items-center gap-3">
            <a href="/" class="text-decoration-none fs-4 text-dark">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div class="fw-bold fs-5 text-dark">Mój profil</div>
        </div>
    </div>

    <div class="bg-white p-4 shadow-sm mb-3 rounded-4 text-center">
        <div class="rounded-circle d-inline-flex align-items-center justify-content-center text-white mb-3"
             style="width: 100px; height: 100px; font-size: 2.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            @Model.FirstName.Substring(0, 1).ToUpper()@Model.LastName.Substring(0, 1).ToUpper()
        </div>
        <h3 class="fw-bold mb-1">@Model.FullName</h3>
        <p class="text-muted mb-3">@Model.Email</p>
        
        <a href="/Profile/Edit" class="btn btn-dark rounded-pill px-4">
            <i class="bi bi-pencil-fill me-2"></i>Edytuj profil
        </a>
    </div>

    <div class="bg-white p-3 shadow-sm mb-3 rounded-4">
        <h5 class="fw-bold mb-3">
            <i class="bi bi-graph-up text-info me-2"></i>Twoje statystyki
        </h5>
        
        <div class="row g-3">
            <div class="col-4">
                <div class="text-center p-3 bg-light rounded-3">
                    <div class="fs-3 fw-bold text-primary">@Model.TotalGamesPlayed</div>
                    <small class="text-muted">Gier rozegranych</small>
                </div>
            </div>
            <div class="col-4">
                <div class="text-center p-3 bg-light rounded-3">
                    <div class="fs-3 fw-bold text-success">@Model.TotalGamesOrganized</div>
                    <small class="text-muted">Gier zorganizowanych</small>
                </div>
            </div>
            <div class="col-4">
                <div class="text-center p-3 bg-light rounded-3">
                    <div class="fs-3 fw-bold text-info">@Model.ActiveGroupsCount</div>
                    <small class="text-muted">Aktywnych grup</small>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white p-3 shadow-sm mb-3 rounded-4">
        <h5 class="fw-bold mb-3">
            <i class="bi bi-person-circle text-info me-2"></i>Informacje o koncie
        </h5>
        
        <div class="mb-3">
            <small class="text-muted d-block">Imię i nazwisko</small>
            <div class="fw-semibold">@Model.FullName</div>
        </div>
        
        <div class="mb-3">
            <small class="text-muted d-block">Adres e-mail</small>
            <div class="fw-semibold">@Model.Email</div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
        {
            <div class="mb-3">
                <small class="text-muted d-block">Numer telefonu</small>
                <div class="fw-semibold">@Model.PhoneNumber</div>
            </div>
        }
        
        <div class="mb-3">
            <small class="text-muted d-block">Konto utworzone</small>
            <div class="fw-semibold">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
        </div>
        
        <div class="mb-0">
            <small class="text-muted d-block">Ostatnia aktualizacja</small>
            <div class="fw-semibold">@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</div>
        </div>
    </div>

    <div class="bg-white p-3 shadow-sm rounded-4">
        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger w-100 rounded-3 fw-semibold">
                <i class="bi bi-box-arrow-right me-2"></i>Wyloguj się
            </button>
        </form>
    </div>
</div>

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999; margin-top: 70px;">
    @if (TempData["Success"] != null)
    {
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <strong>Sukces!</strong> @TempData["Success"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-x-circle-fill me-2"></i>
                    <strong>Błąd!</strong> @TempData["Error"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        var toastList = toastElList.map(function(toastEl) {
            return new bootstrap.Toast(toastEl, {
                autohide: true,
                delay: 6000
            });
        });
        toastList.forEach(function(toast) {
            toast.show();
        });
    });
</script>
</body>
</html>
