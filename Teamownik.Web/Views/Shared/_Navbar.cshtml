@{
    var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
    var action = ViewContext.RouteData.Values["Action"]?.ToString();
}

<style>
    .navbar-nav .nav-link {
        transition: all 0.3s ease;
        border-radius: 8px;
        margin: 4px 8px;
        padding: 8px 12px !important;
    }
    
    .navbar-nav .nav-link:hover {
        background-color: rgba(0, 188, 212, 0.1);
        color: #00bcd4 !important;
    }
    
    .navbar-nav .nav-link.active {
        background-color: rgba(0, 188, 212, 0.15);
        color: #00bcd4 !important;
        font-weight: 600;
    }
    
    .navbar-nav .nav-link.active i {
        color: #00bcd4 !important;
    }
</style>

<nav class="navbar bg-white shadow-sm fixed-top">
    <div class="container-fluid" style="max-width: 900px;">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
            <i class="bi bi-controller fs-4 text-info"></i>
            <span class="h6 fw-bold mb-0 text-info" style="letter-spacing: 1px;">TEAMOWNIK</span>
        </a>

        <div class="d-flex align-items-center gap-3">
            @* <i class="bi bi-bell fs-4 text-dark"></i> *@
            <button class="navbar-toggler border-0 p-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
                <i class="bi bi-list fs-2"></i>
            </button>
        </div>

        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar">
            <div class="offcanvas-header bg-light">
                <h5 class="offcanvas-title fw-bold">Menu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link fs-5 @(controller == "Home" && action == "Index" ? "active" : "")" 
                           href="/">
                            <i class="bi bi-house-door-fill me-2"></i>Strona główna
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link fs-5 @(controller == "Groups" ? "active" : "")" 
                           href="/Groups">
                            <i class="bi bi-people-fill me-2"></i>Moje grupy
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link fs-5 @(controller == "Games" && action == "Create" ? "active" : "")" 
                           href="/Games/Create">
                            <i class="bi bi-plus-circle-fill me-2"></i>Utwórz spotkanie
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link fs-5 @(controller == "Settlements" ? "active" : "")" 
                           href="/Settlements/MyPayments">
                            <i class="bi bi-credit-card-fill me-2"></i>Płatności
                        </a>
                    </li>
                    
                    <li><hr class="dropdown-divider"></li>
                    
                    <li class="nav-item">
                        <a class="nav-link fs-5 @(controller == "Profile" ? "active" : "")" 
                           href="/Profile">
                            <i class="bi bi-person-circle me-2"></i>Profil
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>