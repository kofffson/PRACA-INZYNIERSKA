@model List<User>

@{
    ViewData["Title"] = "Użytkownicy";
}

<h1>Lista użytkowników</h1>

<table border="1" style="width:100%; border-collapse: collapse;">
    <thead>
    <tr>
        <th>ID</th>
        <th>Imię</th>
        <th>Nazwisko</th>
        <th>Email</th>
        <th>Rola</th>
        <th>Aktywny</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Imie</td>
            <td>@user.Nazwisko</td>
            <td>@user.Email</td>
            <td>@user.Rola</td>
            <td>@(user.Aktywny ? "Tak" : "Nie")</td>
            <td>
                <a href="/User/Details/@user.Id">Szczegóły</a>
            </td>
        </tr>
    }
    </tbody>
</table>