@model List<Group>

@{
    ViewData["Title"] = "Lista grup";
}

<h1>Grupy sportowe</h1>

<p>
    <a href="/Group/Create" class="btn btn-primary">Dodaj nową grupę</a>
</p>

<table border="1" style="width:100%; border-collapse: collapse;">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nazwa</th>
        <th>Opis</th>
        <th>Zawodnicy</th>
        <th>Status</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var group in Model)
    {
        <tr>
            <td>@group.Id</td>
            <td>@group.Nazwa</td>
            <td>@group.Opis</td>
            <td>@group.ObecnychZawodnikow / @group.MaxZawodnikow</td>
            <td>@group.Status</td>
            <td>
                <a href="/Group/Details/@group.Id">Szczegóły</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>Brak grup w systemie.</p>
}